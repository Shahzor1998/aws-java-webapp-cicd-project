<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 https://maven.apache.org/xsd/settings-1.0.0.xsd">

  <servers>
    <server>
      <id>codeartifact-repo</id>
      <username>aws</username>
      <password>${env.CODEARTIFACT_AUTH_TOKEN}</password>
    </server>
  </servers>

  <mirrors>
    <mirror>
      <id>codeartifact-repo</id>
      <name>CodeArtifact Maven repository</name>
      <url>https://${env.CODEARTIFACT_DOMAIN}-${env.ACCOUNT_ID}.d.codeartifact.${env.AWS_REGION}.amazonaws.com/maven/${env.CODEARTIFACT_REPOSITORY}/</url>
      <mirrorOf>*</mirrorOf>
    </mirror>
  </mirrors>

  <profiles>
    <profile>
      <id>codeartifact</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
      <repositories>
        <repository>
          <id>codeartifact-repo</id>
          <url>https://${env.CODEARTIFACT_DOMAIN}-${env.ACCOUNT_ID}.d.codeartifact.${env.AWS_REGION}.amazonaws.com/maven/${env.CODEARTIFACT_REPOSITORY}/</url>
        </repository>
      </repositories>
    </profile>
  </profiles>
</settings>
